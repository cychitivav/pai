<?xml version="1.0"?>
<launch>
    <arg name="host" default="localhost" />
    <!-- Node python scripts -->
    <node name="kinematic_model"
        pkg="pai"
        output="screen"
        type="kinematic_model.py"
    />

    <!-- Drivers -->
    <rosparam file="$(find pai)/config/drivers_pinout.yaml" command="load" />

    <!-- Front right driver  -->
    <node name="front_right_driver"
        pkg="pai" output="screen"
        type="motor_driver.py"
        args="$(arg host) driver_front_right"
        required="true"
    >
        <remap from="/motor_ctrl/command" to="/front_right_wheel_ctrl/command" />
    </node>

    <!-- Front left driver  -->
    <node name="front_left_driver"
        pkg="pai" output="screen"
        type="motor_driver.py"
        args="$(arg host) driver_front_left"
        required="true"
    >
        <remap from="/motor_ctrl/command" to="/front_left_wheel_ctrl/command" />
    </node>

    <!-- back right driver  -->
    <node name="back_right_driver"
        pkg="pai" output="screen"
        type="motor_driver.py"
        args="$(arg host) driver_back_right"
        required="true"
    >
        <remap from="/motor_ctrl/command" to="/back_right_wheel_ctrl/command" />
    </node>

    <!-- Front left driver  -->
    <node name="front_left_driver"
        pkg="pai" output="screen"
        type="motor_driver.py"
        args="$(arg host) driver_front_left"
        required="true"
    >
        <remap from="/motor_ctrl/command" to="/front_left_wheel_ctrl/command" />
    </node>

    <!-- back left driver  -->
    <node name="back_left_driver"
        pkg="pai" output="screen"
        type="motor_driver.py"
        args="$(arg host) driver_back_left"
        required="true"
    >
        <remap from="/motor_ctrl/command" to="/back_left_wheel_ctrl/command" />
    </node>
</launch>