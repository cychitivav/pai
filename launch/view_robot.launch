<?xml version="1.0"?>

<launch>

    <!-- Load model -->
    <arg name="model" default="$(find pai)/urdf/robot_view.urdf"/>

    <!-- Parse model -->
    <param name="robot_description" command="$(find xacro)/xacro $(arg model)"/>

    <!-- NODES -->

    <!-- states publisher -->
    <node
        pkg="robot_state_publisher"
        type="robot_state_publisher"
        name="rob_pub">
    </node>

    <node
        pkg="joint_state_publisher_gui"
        type="joint_state_publisher_gui"
        name="joint_state">
    </node>

    <!-- RViz -->
    <node
        pkg="rviz"
        type="rviz"
        name="rviz"
        args="-d $(find pai)/rviz/rviz_config.rviz">
    </node>

</launch>