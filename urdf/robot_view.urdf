<?xml version="1.0"?>

<robot name="wheels" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- Parameters -->
    <xacro:property name="BH" value="0.3"/> <!-- Base height -->
    <xacro:property name="BW" value="1"/>   <!-- Base Width -->
    <xacro:property name="BL" value="2"/>   <!-- Base Long -->
    <xacro:property name="WR" value="0.25"/>  <!-- Wheel radius -->
    <xacro:property name="WW" value="0.2"/>  <!-- Wheel width -->
    <xacro:property name="F" value="0.1"/>  <!-- Distance from floor -->
    <xacro:property name="L" value="0.5"/>  <!-- Distance from center to wheel -->

    <!-- Reference Frame (link 0) -->
    <link name="world"/>

    <!-- BASE -->
    
    <joint name="base_joint" type="fixed">
        <origin xyz="0.0 0.0 0.0"/>
        <parent link="world" />
        <child link="base_link" />
    </joint>

    <link name="base_link">

        <intertial>
        </intertial>

        <visual>
            <origin xyz="0.0 0.0 ${BH/2 + F}" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="${BL} ${BW} ${BH}"/>
            </geometry>
            <material name="base_material">
                <color rgba="1.0 0.0 0.0 0.6" />
            </material>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="${BL} ${BW} ${BH}"/>
            </geometry>
        </collision>

    </link>

    <!-- FRONT-RIGHT WHEEL -->

    <joint name="front_right_wheel_joint" type="continuous">
        <origin xyz="${L} ${-BW/2 - WW/2} ${WR}" rpy="$(eval -pi/2) 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="front_right_wheel_link"/>
        <axis xyz="0 0 1"/>
    </joint>

    <transmission name="front_right_wheel_trans">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="front_right_wheel_joint">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>
        <actuator name="front_right_wheel_motor">
            <hardwareInterface>VelocityJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
    </transmission>

    <link name="front_right_wheel_link">

        <inertial>
            <mass value="0.01"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
        </inertial>

        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="${WR}" length="${WW}"/>
            </geometry>
            <material name="wheel_material">
                <color rgba="0.2 0.2 0.2 0.7"/>
            </material>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="${WR}" length="${WW}"/>
            </geometry>
        </collision>

    </link>

    <!-- FRONT-LEFT WHEEL -->

    <joint name="front_left_wheel_joint" type="continuous">
        <origin xyz="${L} ${BW/2 + WW/2} ${WR}" rpy="$(eval pi/2) 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="front_left_wheel_link"/>
        <axis xyz="0 0 1"/>
    </joint>

    <transmission name="front_left_wheel_trans">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="front_left_wheel_joint">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>
        <actuator name="front_left_wheel_motor">
            <hardwareInterface>VelocityJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
    </transmission>

    <link name="front_left_wheel_link">

        <inertial>
            <mass value="0.01"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
        </inertial>

        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="${WR}" length="${WW}"/>
            </geometry>
            <material name="wheel_material">
                <color rgba="0.2 0.2 0.2 0.7"/>
            </material>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="${WR}" length="${WW}"/>
            </geometry>
        </collision>

    </link>

    <!-- BACK-RIGHT WHEEL -->

    <joint name="back_right_wheel_joint" type="continuous">
        <origin xyz="${-L} ${-BW/2 - WW/2} ${WR}" rpy="$(eval -pi/2) 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="back_right_wheel_link"/>
        <axis xyz="0 0 1"/>
    </joint>

    <transmission name="back_right_wheel_trans">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="back_right_wheel_joint">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>
        <actuator name="back_right_wheel_motor">
            <hardwareInterface>VelocityJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
    </transmission>

    <link name="back_right_wheel_link">

        <inertial>
            <mass value="0.01"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
        </inertial>

        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="${WR}" length="${WW}"/>
            </geometry>
            <material name="wheel_material">
                <color rgba="0.2 0.2 0.2 0.7"/>
            </material>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="${WR}" length="${WW}"/>
            </geometry>
        </collision>

    </link>

    <!-- BACK-LEFT WHEEL -->

    <joint name="back_left_wheel_joint" type="continuous">
        <origin xyz="${-L} ${BW/2 + WW/2} ${WR}" rpy="$(eval pi/2) 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="back_left_wheel_link"/>
        <axis xyz="0 0 1"/>
    </joint>

    <transmission name="back_left_wheel_trans">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="back_left_wheel_joint">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>
        <actuator name="back_left_wheel_motor">
            <hardwareInterface>VelocityJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
    </transmission>

    <link name="back_left_wheel_link">

        <inertial>
            <mass value="0.01"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
        </inertial>

        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="${WR}" length="${WW}"/>
            </geometry>
            <material name="wheel_material">
                <color rgba="0.2 0.2 0.2 0.7"/>
            </material>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="${WR}" length="${WW}"/>
            </geometry>
        </collision>

    </link>



</robot>